<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('my_thumb') }}" alt="card-img-top"
             style="width:100%;height:auto;">
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' | imagine_filter('my_thumb') }}" alt="card-img-top"
             style="width:100%;height:auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            {{ property.title }}
        </h5>
        <p class="card-text">{{ property.surface }}
            m2 -
            {{ property.city }}
            ({{ property.postalCode }})<br>
            {{ property.formattedPrice }}$
            <a href="{{ path('property.show', {id:property.id, slug:property.slug}) }}"
               class="btn btn-success pull-right">Read</a>
     </div>
</div>
